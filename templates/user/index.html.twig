{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-12">
                <h1 class="text-center h2 my-3">crud</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a class="btn btn-primary" href="">Add user</a>
            </div>
        </div>

        <div class="table-responsive my-3">
            {% if users %}
            <table class="table table-hover">
                <thead class="table-secondary">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Username</th>
                    <th colspan="2" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                <tr id="city-<?= $user['id'] ?>">
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.username }}</td>
                    <td class="d-flex justify-content-center gap-2">

                        <a class="btn btn-secondary" href="">Details</a>

                        <form action="/" method="POST">
                            <input type="hidden" name="id" value="">
                            <button type="submit" onclick="return confirmDelete()" class="btn btn-danger">
                                Delete
                            </button>
                        </form>

                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                <h5>Users not found</h5>
            {% endif %}
        </div>
    </div>
{% endblock %}
