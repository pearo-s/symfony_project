{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% if post %}

            <div class="row">
                <div class="col-12">
                    <h1 class="text-center h2 my-3">{{ post.title }}</h1>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <p>{{ post.text }}</p>
                </div>
            </div>

            <div class="row">
                <div class="d-flex justify-content-lg-begin gap-2">
                    <a class="btn btn-success" href="{{ path('edit_post', {'id': post.id}) }}">Edit</a>

                    <form action="{{ path('delete_post', {'id': post.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button type="submit" onclick="return confirmDelete()" class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h4 class="text-center h4 my-3" style="color: red">Unmoderated commentaries</h4>
                </div>
            </div>

            {% if commentaries is not empty %}
                {% for commentary in commentaries %}
                    {% if not commentary.isModerated %}
                    <div class="card w-50 shadow-sm mt-5">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div>
                                    <h5 class="card-title mb-0"><a href="{{ path('show_user', {'id': commentary.User.Id}) }}" class="link-dark">{{ commentary.User.Name }}</a></h5>
                                    <small class="text-muted">{{ commentary.CreatedAt.format('Y-m-d') }}</small>
                                </div>
                            </div>
                            <p class="card-text">
                                {{ commentary.Text }}
                            </p>
                            <div class="d-flex justify-content-lg-begin gap-2">
                                <form action="{{ path('confirm_commentary', {'id': commentary.id}) }}" method="post">
                                    <button type="submit" onclick="return confirmCommentary()" class="btn btn-primary btn-sm">Confirm</button>
                                </form>

                                <form action="{{ path('delete_commentary', {'id': commentary.id}) }}" method="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button type="submit" onclick="return confirmDelete()" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                <h6 class="mt-5"><i style="color: red">No unmoderated commentaries</i></h6>
            {% endif %}

        {% else %}

            <h2><i style="color: red">Post does not exist</i></h2>

        {% endif %}

    </div>
{% endblock %}
